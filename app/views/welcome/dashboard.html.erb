<% @articles.each do |article| %>
	<h3><%= link_to article.title, article %></h3>
	<small><p><%= article.body %> - <%= link_to "Eliminar", article, method: :delete, class: "red" %>
	<% if article.may_publish? %>
		- <%= link_to "Publicar", "/articles/#{article.id}/publish", method: :put, class: "blue" %>
	<%end%>
	</p></small>
<%end%>